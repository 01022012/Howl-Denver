.content
  %span.concert_date
    = @concert.concert_date.strftime('%b') 
    %br
    = @concert.concert_date.strftime('%d')
  .pod.concert-stub
    %h2.red Lineup:
    %ul.lineup
      -@concert.artists.each do |artist|
        %li
          %a.block-link{ :href => '/artists/' + artist.id.to_s }
            =artist.name 
            .pod.red
              =artist.bio   
  %a.block-link{ :href=> '/venues/' + @concert.venue.id.to_s }
    %h2.red @ #{@concert.venue.name}
    .pod
      %span.red
        =@concert.venue.address
      %br
      %br
      =@concert.venue.description
    
.sidebar
  .pod.red.tan
    %h2.red Description
    .divider
    = @concert.description
    %h2.red Show Info
    .divider
    %span.left Time:
    %span.right
      = @concert.concert_date.strftime('%I:%M %p')
    %br
    %span.left Age:
    %span.right
      = @concert.age 
    %br
    %span.left Cost:
    %span.right
      - if @concert.price.present?
        $ #{@concert.price}
      - else 
        Free
        
  = link_to 'Edit', edit_concert_path( @concert.id ), :class => 'red-button'
