.concert_stub
  %a{ :href => '/concerts/' + c.id.to_s, :class=>'concert_link' }
    .info_block
      %span.attr_title Lineup:
      %ul.concert_lineup
        - c.artists.each_with_index do |a, index|
          %li
            - i = index
            - while i >= 0 
              &='--'
              - i = i - 1
            = a.name
    .info_block
      %span.attr_title Show Info:
      - if c.price.present?
        $ #{c.price} .
      - else 
        FREE!!!
      %span.red_link
        = '@' + c.venue.name
      #{c.concert_date.strftime('%I:%M %p')} . #{c.age}
	
	